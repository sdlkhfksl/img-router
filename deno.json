{
  "version": "v1.7.0",
  "imports": {
    "imagescript": "https://deno.land/x/imagescript@1.3.0/mod.ts",
    "@std/encoding": "jsr:@std/encoding@^1.0.5"
  },
  "compilerOptions": {
    "lib": ["deno.window", "deno.ns"],
    "strict": true
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": false
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "tasks": {
    "dev": "deno run --allow-net --allow-env --allow-write --watch main.ts",
    "start": "deno run --allow-net --allow-env --allow-write main.ts"
  }
}